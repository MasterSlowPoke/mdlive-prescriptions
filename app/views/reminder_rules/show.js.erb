$('#rule-<%= @reminder_rule.id %>').slideUp(function() {
  $("<%= escape_javascript(render @reminder_rule) %>").hide().insertBefore($(this)).slideDown();
  $('.glyphicon[title]').tooltip();
  $(this).remove();
});

$('#dosage-times').fadeOut(function() {
  $(this).html("<%= escape_javascript(render 'reminders/dosage_times', dosage_times: @reminder_rule.reminder.enumerate_doses) %>").fadeIn();
});
