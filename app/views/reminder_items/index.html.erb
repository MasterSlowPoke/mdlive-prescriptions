<h1>Listing reminder_items</h1>

<table>
  <thead>
    <tr>
      <th>Reminder</th>
      <th>Taken</th>
      <th>Missed</th>
      <th>Scheduled time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminder_items.each do |reminder_item| %>
      <tr>
        <td><%= reminder_item.reminder.title %></td>
        <td><%= reminder_item.taken %></td>
        <td><%= reminder_item.missed %></td>
        <td><%= reminder_item.scheduled_time.strftime('%A, %b ') + reminder_item.scheduled_time.day.ordinalize + reminder_item.scheduled_time.strftime(' @ %I:%M %p') %></td>
        <td><%= link_to 'Show', reminder_item %></td>
        <td><%= link_to 'Edit', edit_reminder_item_path(reminder_item) %></td>
        <td><%= link_to 'Destroy', reminder_item, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

