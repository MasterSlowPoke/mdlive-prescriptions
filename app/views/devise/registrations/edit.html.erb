<h1>Edit Your Details</h1>

<%= devise_error_messages! %>

<section class="col-md-8">
	<%= render 'form' %>
</section>

<section class="col-md-4">
	<aside class="sidebar">
	  <h2>Cancel Account</h2>
	  <p>Canceling your account is an irreversible process. Your data will be completely removed.</p>
	  
	  <%= label_tag :accept, "#{check_box_tag :accept} I understand that nothing can save a deleted account.".html_safe %>
	  <div class="centered-button">
	  	<%= button_to "Delete Account Permanently", user_path, { id: 'delete-account', method: :delete, disabled: true }%>
		</div>
	</aside>
</section>
