<h1>Listing reminders</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Num per</th>
      <th>Time period</th>
      <th>Notes</th>
      <th>Start</th>
      <th>Doses</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.title %></td>
        <td><%= reminder.num_per %></td>
        <td><%= reminder.time_period %></td>
        <td><%= reminder.notes %></td>
        <td><%= reminder.start %></td>
        <td><%= reminder.doses %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Reminder', new_reminder_path %>
