<h1>Medications</h1>

<table>
  <thead>
    <table class="table table-hover">
    <tr>
      <th>Name</th>
      <th>Doses / Time Period</th>
      <th>Days</th>
      <th>Time</th>
      <th>Start</th>
      <th>End</th>
      <th>Notification Type</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminders.each do |reminder| %>
      <tr>
        <td><%= reminder.title %></td>
        <td><%= reminder.doses %> per <%= reminder.time_period.downcase %></td>
        <td><%= "reminder.days" %></td>
        <td><%= reminder.start %></td>
        <td><%= reminder.notes %></td>
        <td><%= link_to 'Show', reminder %></td>
        <td><%= link_to 'Edit', edit_reminder_path(reminder) %></td>
        <td><%= link_to 'Destroy', reminder, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</table>

<br>
<div id="new_reminder_btn">
<%= link_to '(+) New Reminder', new_reminder_path %>
</div>
